{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "1000 meteorite landings",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
        "data": {
            "url":"https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
                "type": "topojson", 
                "feature":"ne_110m_admin_0_countries"
            }
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke":
        "white"}
        },
    {
    "data": {
    "url":
    "meteorite-landings-2.csv"
    },
    "mark": {"type": "circle", "tooltip": {"content": "data"}},
    "encoding": {
    "longitude": {"field": "reclong", "type":
    "quantitative"},
    "latitude": {"field": "reclat", "type":
    "quantitative"},
    "size": {
    "field": "mass",
    "type": "quantitative",
    "title": "Mass of meteorite",
    "scale": {"domain": [2500, 60000000]}
    },
    "color": {
        "field": "year",
        "type": "quantitative",
        "title": "Year",
        "scale": {"scheme": "lighttealblue"}
        }
        
    }
    }
    ]
}